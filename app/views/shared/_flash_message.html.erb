<main class="container mt-3">
  <div>
    <% flash.each do |name, msg| %>
      <% if name == "notice" || name == "alert"   %>
        <div>
          <%= tag.div msg, class: "alert alert-info", role: 'alert' %>
      <% else %>
        <%= tag.div msg, class: "alert alert-#{name}", role: 'alert' %>
        </div>
      <% end %>
    <% end %>
  </div>
</main>




