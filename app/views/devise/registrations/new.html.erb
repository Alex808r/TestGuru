<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h2> <%= t('.header') %> </h2>

    <div class="card border-primary">
      <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <p>
            <%= f.label :name, "Nickname (used for authorization)" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
          </p>

          <p>
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "form-control" %>
          </p>

          <p>
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last name", class: "form-control" %>
          </p>

          <p>
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </p>

          <p>
            <%= f.label :password, t('.password') %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> <%= t('.password_charecters_min') %>)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "password_check" %>
          </p>

          <p>
            <%= f.label :password_confirmation, t('.password_confirmation') %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_check" %>
          </p>
        </div>
            <%= f.submit t('shared.links.signup'), class: "btn btn-primary" %>

  <% end %>
      </div>
    </div>
    <div class="mt-1">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>