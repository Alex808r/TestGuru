<h1> <%= @question.test.title %></h1>

<p>
  <strong>Id:</strong>
  <%= @question.id %>
</p>


<p>
  <strong>Body:</strong>
  <%= @question.body %>
</p>

<%= link_to "Edit", edit_admin_question_path %>
